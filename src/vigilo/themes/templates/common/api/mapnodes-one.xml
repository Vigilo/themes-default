<?xml version="1.0"?>
<mapnode xmlns="http://projet-vigilo.org/ns/api"
         xmlns:py="http://genshi.edgewall.org/"
         xmlns:xi="http://www.w3.org/2001/XInclude"
         id="${mapnode.id}">
    <label>${mapnode.label}</label>
    <x>${mapnode.x}</x>
    <y>${mapnode.y}</y>
    <widget>${mapnode.widget}</widget>
    <type>${mapnode.type}</type>
    <icon>${mapnode.icon}</icon>
    <submaps>
        <map py:for="map in mapnode.submaps"
             id="${map.id}" href="${map.href}" title="${map.title}" />
    </submaps>
    <host py:if="'host' in mapnode" id="${mapnode.host.id}" href="${mapnode.host.href}" />
    <lls py:if="'lls' in mapnode" id="${mapnode.lls.id}" href="${mapnode.lls.href}" />
    <hls py:if="'hls' in mapnode" id="${mapnode.hls.id}" href="${mapnode.hls.href}" />
</mapnode>
